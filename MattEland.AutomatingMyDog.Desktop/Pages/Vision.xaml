<UserControl x:Class="MattEland.AutomatingMyDog.Desktop.Pages.Vision"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MattEland.AutomatingMyDog.Desktop.Pages" xmlns:controls="clr-namespace:MattEland.AutomatingMyDog.Desktop.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel MinHeight="600">
        <controls:DogOSChat DockPanel.Dock="Right" MaxWidth="800" MinWidth="600" Margin="12 0 0 0" Padding="0" />
        <Border Style="{DynamicResource PanelStyle}">
            <StackPanel Orientation="Vertical" VerticalAlignment="Top">
                <TextBlock Style="{DynamicResource PageHeaderTextStyle}">
                    Computer Vision
                </TextBlock>
                <TextBlock Style="{DynamicResource PageBodyTextStyle}">
                    The Computer Vision API can extract information from any image using pre-trained models on Azure as part of Azure Cognitive Services.
                </TextBlock>

            </StackPanel>
        </Border>
    </DockPanel>
</UserControl>
