<UserControl x:Class="MattEland.AutomatingMyDog.Desktop.Pages.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MattEland.AutomatingMyDog.Desktop.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Vertical" VerticalAlignment="Top">
        <TextBlock Style="{DynamicResource PageHeaderTextStyle}" Text="{Binding Path=AppName}" />
        <TextBlock Style="{DynamicResource PageBodyTextStyle}">
            Welcome to DogOS! This is a sample application that demonstrates how <Span FontWeight="Bold">Azure Cognitive Services</Span> can help automate the common things my dog does.
        </TextBlock>
    </StackPanel>
</UserControl>
